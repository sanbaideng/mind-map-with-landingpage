{
  "name": "nextjs-i18n-template",
  "version": "1.0.0",
  "private": true,
  "description": "A reusable Next.js template with i18n support, TailwindCSS, and configurable navigation",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npm run build && cp _headers out/ && cp _redirects out/",
    "pages:deploy": "npm run pages:build && npx wrangler pages deploy out --project-name=mind-map-landing",
    "pages:dev": "npx wrangler pages dev out"
  },
  "browserslist": "defaults, not ie <= 11",
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@headlessui/tailwindcss": "^0.2.2",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^20.17.9",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "next": "^14.2.20",
    "next-intl": "^3.25.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.20",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "sharp": "0.34.4"
  }
}
